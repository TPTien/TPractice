<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="4dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_name"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TOEIC 700+"/>
        <ImageView
            android:layout_margin="2dp"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_timer_24"
            app:layout_constraintEnd_toStartOf="@id/tv_time"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:text="20 phút"
            android:layout_margin="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_timer"/>
        <TextView
            app:layout_constraintBottom_toTopOf="@id/tv_host"
            android:layout_margin="4dp"
            android:id="@+id/tv_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="topic"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_member"/>
        <ImageView
            app:layout_constraintBottom_toTopOf="@id/tv_host"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_member"
            android:src="@drawable/ic_member"
            app:layout_constraintStart_toEndOf="@id/tv_topic"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toStartOf="@id/tv_numMember"/>
        <TextView
            app:layout_constraintBottom_toTopOf="@id/tv_host"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 người"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:id="@+id/tv_numMember"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_member"/>
        <ImageView
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/img_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_topic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_host"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintBottom_toTopOf="@id/bottom_color"/>
        <TextView

            android:layout_margin="4dp"
            android:id="@+id/tv_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tptien"
            app:layout_constraintStart_toEndOf="@id/img_host"
            app:layout_constraintBottom_toTopOf="@id/bottom_color"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite"
            app:layout_constraintTop_toBottomOf="@id/tv_topic"
            android:textColor="@color/blue"/>
        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_favorite_24"
            android:backgroundTint="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_color"
            app:layout_constraintTop_toBottomOf="@id/tv_topic"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@id/img_host"
            android:id="@+id/bottom_color"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/green"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>